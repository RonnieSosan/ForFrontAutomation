@model ForFront.Web.Models.SpiderDeploymentModel

@{
    ViewData["Title"] = "View";
}
<div>
    <h1>Spider Deployment Result</h1>
    <hr />
    <span>
        @{
            <label class="control-label">Spider is currently at (@Model.XAxis , @Model.YAxis) , and is currently facing @Model.CurrentDirection.</label>
        }
    </span>
    <dl class="row">

        <dt class="col-sm-2">
            <label asp-for="XAxis" class="control-label">Current X Coordinate</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.XAxis)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="YAxis" class="control-label">Current Y Coordinate</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YAxis)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="XAxis" class="control-label">Current Direction</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentDirection)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Back", "IndexRedirect") 
</div>
